//text
$font-stack-brand = "BebasFamily", BebasNeueRegular, "Bebas Neue", BebasNeue, Helvetica, Arial, sans-serif
$font-stack-text = HelveticaNeue, "Helvetica Neue", Helvetica, Arial, sans-serif
//colors
$color-primary = #ef9223
$color-primary-deep = #e87e17
$color-blacker = black
$color-black = #222222
$color-darkergray = #888888
$color-darkgray = #c6c6c6
$color-gray = #d6d6d6
$color-lightgray = #f1f1f1
$color-lightergray = #f7f7f7
$color-offwhite = #f7f7f7
$color-white = white
//mixins
clearfix()
  content: ''
  clear: both
  display: table
gradient-top-btm($color1, $color2)
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, $color1), color-stop(100%, $color2)) /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, $color1 0%, $color2 100%) /* Chrome10+,Safari5.1+ */
  background:    -moz-linear-gradient(top, $color1 0%, $color2 100%) /* FF3.6+ */
  background:     -ms-linear-gradient(top, $color1 0%, $color2 100%) /* IE10+ */
  background:      -o-linear-gradient(top, $color1 0%, $color2 100%) /* Opera 11.10+ */
  background: linear-gradient(to bottom, $color1 0%, $color2 100%) /* W3C */
